{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "generate-eden-theme-file",
      "type": "shell",
      "command": "source ~/.nvm/nvm.sh && nvm use && pnpm --filter eden-vscode dev",
      "isBackground": true,
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "problemMatcher": [
        {
          "pattern": 
            [
              {
                "regexp": "",
                "file": 1,
                "location": 2,
                "severity": 3,
                "code": 4,
                "message": 5
              }
            ],
          "background": {
              "activeOnStart": true,
              "beginsPattern": ".",
              "endsPattern": "."
          }
        }
      ]
    }
  ]
}